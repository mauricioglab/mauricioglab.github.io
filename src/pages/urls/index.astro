---
import BaseTailwind from '../../layouts/BaseTailwind.astro';

export const prerender = true;

const base = import.meta.env.BASE_URL;
const b = base.endsWith("/") ? base : `${base}/`;

const urls = [
	{ name: "Google", url: "https://google.com" },
	{ name: "GitHub", url: "https://github.com" },
];
---

<BaseTailwind title="URLs útiles — MG Lab" description="URLs útiles">
	<div class="max-w-4xl mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">URLs útiles</h1>
		<ul class="space-y-2 mb-6">
			{
				urls.map((item) => (
					<li>
						<a href={item.url} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 hover:underline">
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
		<p>
			<small><a href={b} class="text-gray-600 hover:text-gray-800">← Inicio</a></small>
		</p>
	</div>
</BaseTailwind>
