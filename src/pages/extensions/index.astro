---
// src/pages/extensions.astro
import BaseTailwind from '../../layouts/BaseTailwind.astro';
import extensionsData from '../../utils/build-extensions';

export const prerender = true;

console.log('Extensions data:', extensionsData); // Debug
---
<BaseTailwind title="Extensiones Chrome" description="Mis extensiones">
    <main class="min-h-screen bg-stone-50 py-16 px-6">
        <div class="max-w-4xl mx-auto">
            
            <div class="text-center mb-12">
                <h1 class="text-3xl font-light text-stone-700 mb-2">
                    Extensiones Chrome
                </h1>
                <p class="text-stone-500 text-sm">
                    {extensionsData.length} extensiones disponibles
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {extensionsData.map((ext: any) => (
                    <div class="bg-white rounded-lg p-6 border border-stone-200 hover:shadow-lg transition-shadow duration-300">
                        <div class="flex items-start justify-between mb-4">
                            <h3 class="text-lg font-medium text-stone-800">
                                {ext.name}
                            </h3>
                            <div class="flex flex-col items-end gap-1">
                                <span class="text-xs text-stone-400 bg-stone-100 px-2 py-1 rounded">
                                    v{ext.version}
                                </span>
                                {ext.size && (
                                    <span class="text-xs text-emerald-600 bg-emerald-50 px-2 py-1 rounded font-medium">
                                        {ext.size}
                                    </span>
                                )}
                            </div>
                        </div>
                        
                        <p class="text-sm text-stone-600 mb-6 leading-relaxed">
                            {ext.description}
                        </p>
                        
                        <a 
                            href={ext.downloadUrl}
                            download
                            class="inline-flex items-center gap-2 bg-stone-800 text-white px-4 py-2 rounded-lg text-sm hover:bg-stone-700 transition-colors w-full justify-center"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                            </svg>
                            Descargar ZIP
                        </a>
                    </div>
                ))}
            </div>
            
            <!-- Link a instrucciones -->
            <div class="mt-12 bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
                <p class="text-sm text-blue-800 mb-3">
                    ¿Primera vez instalando una extensión de Chrome en modo desarrollador?
                </p>
                <a 
                    href="https://support.google.com/chrome/a/answer/2714278?hl=es"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Ver guía oficial de Google Chrome
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                </a>
            </div>
        </div>
    </main>
</BaseTailwind>