---
import type { Profile } from '../data/profiles';
import { 
  type Lang, 
  useTranslations, 
  getAlternateUrl,
  type CommonTranslations, 
  type ProfileTranslations 
} from '../i18n';
import BaseTailwind from './BaseTailwind.astro';
import ContactModal from '../components/landing/ContactModal.astro';

interface Props {
  title: string;
  profile: Profile;
  lang?: Lang;
}

const { title, profile, lang = 'es' } = Astro.props;
const { theme } = profile;
const t = await useTranslations<CommonTranslations>(lang, 'common');
const content = await useTranslations<ProfileTranslations>(lang, profile.id);

// Determine alternate language URL
const altLang = lang === 'es' ? 'en' : 'es';
const altPath = getAlternateUrl(Astro.url, lang);
---

<BaseTailwind title={`${title} | ${content.title}`} description={content.seo.description} lang={lang} layoutType="landing">
  <!-- Header/Nav -->
  <header class="bg-white dark:bg-slate-900 shadow-sm sticky top-0 z-50 border-b border-slate-200 dark:border-slate-700 transition-colors">
    <nav class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <div class="text-2xl font-bold text-slate-900 dark:text-white">
        {content.title.split(' ')[0]}
        <span class="text-sm font-normal text-slate-600 dark:text-slate-400 ml-2">
          | {content.subtitle}
        </span>
      </div>
      
      <div class="hidden md:flex items-center space-x-6">
        <a href="#proyectos" class="text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition">
          {t.nav.projects}
        </a>
        <a href="#skills" class="text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition">
          {t.nav.skills}
        </a>
        <a href="#experiencia" class="text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition">
          {t.nav.experience}
        </a>
        
        <!-- Divider -->
        <div class="h-6 w-px bg-slate-300 dark:bg-slate-600"></div>
        
        <!-- Theme Toggle -->
        <button 
          id="themeToggle"
          class="p-2 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 transition"
          title="Toggle theme"
        >
          <!-- Sun icon (light mode) -->
          <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
          </svg>
          <!-- Moon icon (dark mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
        
        <!-- Language Toggle -->
        <a 
          href={altPath}
          class="px-3 py-1.5 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 transition text-sm font-medium flex items-center gap-1.5"
          title={altLang === 'en' ? 'Switch to English' : 'Cambiar a EspaÃ±ol'}
        >
          {altLang === 'en' ? (
            <!-- UK Flag -->
            <svg class="w-5 h-4 rounded-sm" viewBox="0 0 60 40">
              <rect fill="#012169" width="60" height="40"/>
              <path d="M0,0 L60,40 M60,0 L0,40" stroke="#fff" stroke-width="6"/>
              <path d="M0,0 L60,40 M60,0 L0,40" stroke="#C8102E" stroke-width="4"/>
              <path d="M30,0 V40 M0,20 H60" stroke="#fff" stroke-width="10"/>
              <path d="M30,0 V40 M0,20 H60" stroke="#C8102E" stroke-width="6"/>
            </svg>
          ) : (
            <!-- Spain Flag -->
            <svg class="w-5 h-4 rounded-sm" viewBox="0 0 60 40">
              <rect fill="#AA151B" width="60" height="40"/>
              <rect fill="#F1BF00" y="10" width="60" height="20"/>
            </svg>
          )}
          {altLang.toUpperCase()}
        </a>
      </div>
      
      <div class="flex items-center gap-3">
        <!-- Mobile toggles -->
        <div class="flex md:hidden items-center gap-2">
          <button 
            id="themeToggleMobile"
            class="p-2 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400"
          >
            <!-- Sun icon (light mode) -->
            <svg class="w-4 h-4 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
            </svg>
            <!-- Moon icon (dark mode) -->
            <svg class="w-4 h-4 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
            </svg>
          </button>
          <a 
            href={altPath}
            class="px-2 py-1 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 text-xs font-medium flex items-center gap-1"
          >
            {altLang === 'en' ? (
              <!-- UK Flag Mobile -->
              <svg class="w-4 h-3 rounded-sm" viewBox="0 0 60 40">
                <rect fill="#012169" width="60" height="40"/>
                <path d="M0,0 L60,40 M60,0 L0,40" stroke="#fff" stroke-width="6"/>
                <path d="M0,0 L60,40 M60,0 L0,40" stroke="#C8102E" stroke-width="4"/>
                <path d="M30,0 V40 M0,20 H60" stroke="#fff" stroke-width="10"/>
                <path d="M30,0 V40 M0,20 H60" stroke="#C8102E" stroke-width="6"/>
              </svg>
            ) : (
              <!-- Spain Flag Mobile -->
              <svg class="w-4 h-3 rounded-sm" viewBox="0 0 60 40">
                <rect fill="#AA151B" width="60" height="40"/>
                <rect fill="#F1BF00" y="10" width="60" height="20"/>
              </svg>
            )}
            {altLang.toUpperCase()}
          </a>
        </div>
        
        <a 
          href="#contacto" 
          class="bg-blue-600 dark:bg-blue-500 text-white px-4 md:px-6 py-2 rounded-lg hover:opacity-90 transition font-bold text-sm md:text-base"
        >
          {t.nav.contact}
        </a>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="bg-white dark:bg-slate-900 text-slate-900 dark:text-slate-100 transition-colors">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-slate-50 dark:bg-slate-900 border-t border-slate-200 dark:border-slate-700 py-12 transition-colors">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 mb-8">
        <!-- Info -->
        <div>
          <h3 class="text-xl font-bold mb-4 text-blue-600 dark:text-blue-400">
            {content.title}
          </h3>
          <p class="text-slate-600 dark:text-slate-400 mb-4">
            {content.description}
          </p>
        </div>
        
        <!-- Links -->
        <div>
          <h4 class="font-bold mb-4 text-slate-900 dark:text-white">{t.footer.links}</h4>
          <ul class="space-y-2">
            <li>
              <a href="#proyectos" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition">
                {t.nav.projects}
              </a>
            </li>
            <li>
              <a href="#skills" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition">
                {t.nav.skills}
              </a>
            </li>
            <li>
              <a href={profile.cvUrl} class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition">
                {t.cta.downloadCV}
              </a>
            </li>
            <li>
              <a href="/blog" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition">
                {t.nav.blog}
              </a>
            </li>
          </ul>
        </div>
        
        <!-- Contact -->
        <div>
          <h4 class="font-bold mb-4 text-slate-900 dark:text-white">{t.footer.contact}</h4>
          <div class="space-y-3">
            <a 
              href={profile.linkedinUrl} 
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a 
              href={profile.githubUrl} 
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
            <button 
              data-contact-trigger
              class="flex items-center text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition cursor-pointer"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Email
            </button>
          </div>
        </div>
      </div>
      
      <div class="text-center pt-8 border-t border-slate-200 dark:border-slate-700 text-slate-500 dark:text-slate-500 text-sm">
        <p>&copy; 2026 {content.title}. {t.footer.rights}</p>
      </div>
    </div>
  </footer>

  <!-- Contact Modal -->
  <ContactModal lang={lang} />

  <!-- Theme Toggle Script -->
  <script is:inline>
    document.addEventListener('click', function(e) {
      const btn = e.target.closest('#themeToggle, #themeToggleMobile');
      if (btn) {
        document.documentElement.classList.toggle('dark');
        const isDark = document.documentElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      }
    });
  </script>
</BaseTailwind>
