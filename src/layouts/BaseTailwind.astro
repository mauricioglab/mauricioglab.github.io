---
import Header from './Header.astro';
import Footer from './Footer.astro';
import SnakeGame from '../components/SnakeGame.astro';

interface Props {
	title?: string;
	description?: string;
	lang?: string;
}

const {
	title = "MG Lab Depot",
	description = "MG Lab Applications",
	lang = "es",
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
		<link rel="icon" href={`${baseUrl}/favicon.ico`} />
		<title>{title}</title>
		<!-- Prevent flash of wrong theme -->
		<script is:inline>
			const savedTheme = localStorage.getItem('theme');
			const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
			if (savedTheme === 'dark' || (!savedTheme && systemDark)) {
				document.documentElement.classList.add('dark');
			}
		</script>
		<slot name="head" />
	</head>
	<body class="min-h-screen flex flex-col p-0">
		<Header />

		<!-- Main Content -->
		<main class="flex-1">
			<slot />
		</main>

		<Footer />

		<!-- Game Tab -->
		<button 
			id="gameTabBtn"
			class="fixed bottom-0 right-6 bg-black hover:bg-gray-900 text-white px-3 py-1.5 rounded-t-lg shadow-md transition-transform duration-300 ease-out hover:-translate-y-0.5 text-lg z-40 cursor-pointer border-none"
			title="Jugar Snake"
		>
			ðŸŽ®
		</button>

		<!-- Snake Game Modal -->
		<SnakeGame />
	</body>
</html>
