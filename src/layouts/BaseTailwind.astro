---
import Header from './Header.astro';
import Footer from './Footer.astro';
import MateGame from '../components/games/MateGame.astro';
import PromptModal from '../components/shared/PromptModal.astro';
import type { LayoutType } from '../data/layout-features';
import { getLayoutFeatures } from '../data/layout-features';

interface Props {
	title?: string;
	description?: string;
	lang?: string;
	layoutType?: LayoutType;
	// Override individual features if needed
	showHeader?: boolean;
	showFooter?: boolean;
	showMateGame?: boolean;
	showPromptModal?: boolean;
}

const {
	title = "MG Lab Depot",
	description = "MG Lab Applications",
	lang = "es",
	layoutType = 'public',
	showHeader: showHeaderOverride,
	showFooter: showFooterOverride,
	showMateGame: showMateGameOverride,
	showPromptModal = false,
} = Astro.props;

// Get features from config, allow overrides
const features = getLayoutFeatures(layoutType);
const showHeader = showHeaderOverride ?? features.showMainHeader;
const showFooter = showFooterOverride ?? features.showMainFooter;
const showMateGame = showMateGameOverride ?? features.showMateGame;

const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
		<link rel="icon" href={`${baseUrl}/favicon.ico`} />
		<title>{title}</title>
		<!-- Prevent flash of wrong theme -->
		<script is:inline>
			const savedTheme = localStorage.getItem('theme');
			const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
			if (savedTheme === 'dark' || (!savedTheme && systemDark)) {
				document.documentElement.classList.add('dark');
			}
		</script>
		<slot name="head" />
	</head>
	<body class="min-h-screen flex flex-col p-0">
		{showHeader && <Header />}

		<!-- Main Content -->
		<main class="flex-1">
			<slot />
		</main>

		{showFooter && <Footer />}

		{showMateGame && (
			<>
				<!-- Game Tab -->
				<button 
					id="gameTabBtn"
					class="fixed bottom-0 right-6 bg-black hover:bg-gray-900 text-white px-3 py-1.5 rounded-t-lg shadow-md transition-transform duration-300 ease-out hover:-translate-y-0.5 text-lg z-40 cursor-pointer border-none"
					title="Jugar Mate Run"
				>
					ðŸ§‰
				</button>

				<!-- Mate Game Modal -->
				<MateGame />
			</>
		)}

		{showPromptModal && <PromptModal />}
	</body>
</html>
