---
import type { Lang } from '../i18n';

interface Props {
  title: string;
  description?: string;
  lang: Lang;
  backUrl: string;
  backText: string;
  accentColor?: 'blue' | 'emerald' | 'purple';
}

const {
  title,
  description = '',
  lang,
  backUrl,
  backText,
  accentColor = 'blue'
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <link rel="icon" href={`${baseUrl}/favicon.ico`} />
    <title>{title}</title>
    <script is:inline>
      const savedTheme = localStorage.getItem('theme');
      const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemDark)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-white dark:bg-slate-900 text-slate-900 dark:text-slate-100 transition-colors">
    <!-- Header -->
    <header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-700">
      <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href={baseUrl} class="text-xl font-bold text-slate-900 dark:text-white">
          MG<span class={`text-${accentColor}-600`}>.</span>
        </a>
        <a 
          href={backUrl} 
          class={`text-sm text-slate-600 dark:text-slate-400 hover:text-${accentColor}-600 dark:hover:text-${accentColor}-400 transition`}
        >
          {backText}
        </a>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-6 py-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-slate-900 text-white py-8 mt-20">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <p class="text-slate-400 text-sm">Â© 2026 Mauricio Gonzalez - Full Stack Developer</p>
      </div>
    </footer>
  </body>
</html>
