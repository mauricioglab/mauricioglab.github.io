---
import { calculateReadingTime } from '../../utils/blog';

interface Props {
  content: string;
  /** Text to display after the number (default: "min de lectura") */
  unitText?: string;
}

const { content, unitText = 'min de lectura' } = Astro.props;
const readingTime = calculateReadingTime(content);
---

{readingTime > 0 && (
  <>
    <span> &middot; </span>
    <span>{readingTime} {unitText}</span>
  </>
)}
