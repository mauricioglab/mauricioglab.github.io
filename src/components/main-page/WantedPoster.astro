<div class="wanted-poster" aria-label="Wanted Poster">
    <div class="wanted-header">
        <div class="wanted-title">WANTED</div>
        <div class="wanted-subtitle">DEAD OR ALIVE</div>
    </div>
    <div class="wanted-content">
        <div class="wanted-image-container">
            <img
                id="wanted-image"
                src=""
                alt="Wanted character"
                class="wanted-image"
            />
        </div>
        <div class="wanted-info">
            <div class="wanted-name" id="wanted-name">LOADING...</div>
            <div class="wanted-details">
                <div class="detail-row">
                    <span class="detail-label">SPECIES:</span>
                    <span class="detail-value" id="wanted-species">--</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">STATUS:</span>
                    <span class="detail-value" id="wanted-status">--</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">LAST SEEN:</span>
                    <span class="detail-value" id="wanted-location">--</span>
                </div>
            </div>
        </div>
    </div>
    <div class="wanted-reward">
        <div class="reward-text">REWARD</div>
        <div class="reward-amount" id="reward-amount">$0</div>
    </div>
</div>

<script>
    const API = "https://rickandmortyapi.com/api/character/";

    function generateRandomReward(): string {
        // Generar recompensa entre $1,000 y $999,999
        const min = 1000;
        const max = 999999;
        const reward = Math.floor(Math.random() * (max - min + 1)) + min;
        
        // Formatear con comas
        return "$" + reward.toLocaleString("en-US");
    }

    async function fetchRandomCharacter() {
        const imageEl = document.getElementById("wanted-image") as HTMLImageElement;
        const nameEl = document.getElementById("wanted-name");
        const speciesEl = document.getElementById("wanted-species");
        const statusEl = document.getElementById("wanted-status");
        const locationEl = document.getElementById("wanted-location");
        const rewardEl = document.getElementById("reward-amount");

        if (!imageEl || !nameEl || !speciesEl || !statusEl || !locationEl || !rewardEl) return;

        // Generar recompensa aleatoria
        rewardEl.innerText = generateRandomReward();

        try {
            // Obtener total de personajes
            const infoResponse = await fetch(API);
            const infoData = await infoResponse.json();
            const totalCharacters = infoData.info.count;

            // Obtener personaje random (siempre diferente)
            const randomId = Math.floor(Math.random() * totalCharacters) + 1;
            const response = await fetch(`${API}${randomId}`);
            const data = await response.json();

            imageEl.src = data.image;
            nameEl.innerText = data.name.toUpperCase();
            speciesEl.innerText = data.species.toUpperCase();
            statusEl.innerText = data.status.toUpperCase();
            locationEl.innerText = data.location.name.toUpperCase();
        } catch (e) {
            console.error("Wanted poster error", e);
            if (nameEl) nameEl.innerText = "ERROR LOADING";
        }
    }

    document.addEventListener("DOMContentLoaded", fetchRandomCharacter);
</script>

