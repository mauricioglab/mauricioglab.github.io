    };

    function initGifs() {
        Object.entries(GIF_COLLECTIONS).forEach(([id, urls]) => {
            const img = document.getElementById(id) as HTMLImageElement;
            if (img) img.src = urls[Math.floor(Math.random() * urls.length)];
        });
    }

    document.addEventListener("DOMContentLoaded", initGifs);
</script>

<style>
    .ads-sidebar {
        width: 200px;
        background-color: #003366;
        color: #ffffff;
        padding: 15px;
        font-family: Arial, Helvetica, sans-serif;
        border-left: 2px solid #000000;
    }

    .ad-box {
        border: 2px solid #999999;
        background-color: #ffffff;
        text-align: center;
        margin-bottom: 20px;
        color: #000000;
        overflow: hidden;
    }

    .ad-header-alt {
        background-color: #336699;
        color: #ffffff;
        font-size: 16px;
        font-weight: bold;
        padding: 8px;
    }

    .ad-content {
        padding: 15px;
    }

    .ad-image-placeholder {
        background-color: #eeeeee;
        border: 1px dashed #cccccc;
        margin-bottom: 10px;
        min-height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .fixed-gif-container {
        width: 100%;
        height: 120px;
        overflow: hidden;
        background-color: #000;
        border: 1px solid #333;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .retro-gif {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .ad-buy-text {
        font-size: 14px;
        font-weight: bold;
        color: #cc0000;
        margin-top: 10px;
    }

    .mars-header {
        background-color: #ff9933;
        color: #ffffff;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
    }

    .mars-content {
        padding: 15px;
    }

    .sidebar-info-box {
        padding: 10px;
        border: 1px solid #ffffff;
        margin-top: 20px;
        text-align: center;
        font-size: 11px;
        font-style: italic;
    }
</style>
