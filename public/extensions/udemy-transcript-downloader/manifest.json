{
  "manifest_version": 3,
  "name": "Udemy Transcript Downloader",
  "version": "1.0.0",
  "description": "Download Udemy course transcripts",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "*://*.udemy.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/course/*/learn/lecture/*"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

